# Caddy Configuration for Production

{
    email your-email@ahmedalami.click
}

# Static Site - Main Domain
ahmedalami.click www.ahmedalami.click {
    root * /srv/static-site
    file_server
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    encode gzip
    
    log {
        output file /var/log/caddy/access.log
        format json
    }
}

# Module14 FastAPI App
module14.ahmedalami.click {
    reverse_proxy module14-web:8000
    
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    encode gzip
    
    log {
        output file /var/log/caddy/module14-access.log
        format json
    }
}

# SkateIQ NHL Predictions App
skateiq.ahmedalami.click {
    reverse_proxy skateiq-app:8001
    
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    encode gzip
    
    log {
        output file /var/log/caddy/skateiq-access.log
        format json
    }
}
